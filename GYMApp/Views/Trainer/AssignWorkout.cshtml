@model Workout
@{
    ViewData["Title"] = "Assign Workout";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card p-4 mt-4 shadow">
            <h3 class="text-center">Assign Workout</h3>
            <form method="post">
                <input type="hidden" name="MemberId" value="@Model.MemberId" />

                <div class="mb-3">
                    <label>Description</label>
                    <textarea name="Description" class="form-control" rows="3" required></textarea>
                </div>

                <div class="mb-3">
                    <label>Schedule Date</label>
                    <input type="date" name="ScheduleDate" class="form-control" required />
                </div>

                <button type="submit" class="btn btn-primary w-100">Assign</button>
            </form>
        </div>
    </div>
</div>
